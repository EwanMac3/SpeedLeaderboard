<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                                   android:layout_height="match_parent">

    <TextView
            android:text="Munn Runn"
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/trialNameLabel"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/startTrialBtn"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2" android:textSize="17sp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginEnd="8dp"/>
    <Button
            android:text="@string/leadersBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/seeTimesBtn"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <Button
            android:text="@string/startBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/startTrialBtn"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/seeTimesBtn" android:layout_marginEnd="16dp"
            app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>